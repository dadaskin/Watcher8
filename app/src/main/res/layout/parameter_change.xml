<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_background_color"
    tools:ignore="Overdraw">

    <TextView android:id="@+id/param_change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text_color"
        android:layout_marginTop="20sp"
        android:textSize="25sp"
        />

    <TextView android:id="@+id/param_change_old_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text_color"
        android:layout_marginTop="20sp"
        android:textSize="25sp"
        />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_value_label"
        android:textColor="@color/normal_text_color"
        android:layout_marginTop="20sp"
        android:textSize="25sp"
        />

    <EditText android:id="@+id/param_change_new_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_margin="5sp"
        android:background="@color/normal_text_color"
        android:textSize="25sp"
        tools:ignore="LabelFor" />

    <Button  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done_button_label"
        android:background="@color/button_background_color"
        android:textColor="@color/button_text_color"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:onClick="doneButtonClicked"
        android:layout_marginTop="30sp"
        />

</LinearLayout>